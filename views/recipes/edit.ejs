<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Edit <%= recipe.name %></title>
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>

  <h1>Edit Recipe: <%= recipe.name %></h1>

  <form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
    <label for="name">Recipe Name:</label>
    <input type="text" name="name" id="name" value="<%= recipe.name %>" required />
    <br><br>

    <label for="instructions">Instructions:</label><br>
    <textarea name="instructions" id="instructions" rows="5" cols="40"><%= recipe.instructions %></textarea>
    <br><br>

    <label>Ingredients:</label><br>
    <% allIngredients.forEach(ingredient => { %>
      <label>
        <input type="checkbox" name="ingredients" value="<%= ingredient._id %>"
          <%= recipe.ingredients.some(i => i._id.toString() === ingredient._id.toString()) ? "checked" : "" %> />
        <%= ingredient.name %>
      </label><br>
    <% }) %>

    <br>
    <button type="submit">Update Recipe</button>
  </form>

  <br>
  <a href="/recipes/<%= recipe._id %>">â¬… Back to Recipe</a>
</body>
</html>
